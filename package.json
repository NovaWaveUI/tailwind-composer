{
  "name": "@novawaveui/tailwind-composer",
  "version": "1.0.0",
  "description": "Tailwind Composer is a library that allows you to create complicated Tailwind CSS component variants with ease.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean:dist": "rm -rf dist/",
    "clean:node_modules": "rm -rf node_modules/",
    "clean": "pnpm run clean:dist && npm run clean:node_modules",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky"
  },
  "keywords": [
    "tailwind",
    "variants",
    "css",
    "tailwindcss",
    "utility-first"
  ],
  "author": "Kyle Gagnon <kmgagnon99@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "tailwind-merge": "^3.0.2"
  }
}
